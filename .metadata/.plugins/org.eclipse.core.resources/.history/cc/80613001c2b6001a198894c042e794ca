package test.exam;

public class main {

	public static void main(String[] args) {
		
		Solution s = new Solution();
		
		s.solution("abc", 2);
		
	}

}

class Solution {
	public String solution(String s, int n) {
		String answer = "";
		
		String[] arr = s.split("");
		for(int i=0;i<arr.length;i++) {
			int sum = arr[i].charAt(0) + n;
			String result = String.valueOf(((char)sum));
			answer += result;
		}
		
		return answer;
	}
}